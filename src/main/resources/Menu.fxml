<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<TabPane fx:id="tabPane"
         prefHeight="800.0" prefWidth="1000.0" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="it.unicam.cs.mpgc.jbudget126533.view.GUIController"
         stylesheets="@styles.css">


    <!-- TAB 1: DASHBOARD PRINCIPALE -->
    <Tab text="🏠 Dashboard">
        <content>
            <VBox spacing="20" style="-fx-background-color: #f5f5f5;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <!-- HEADER -->
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                        <Image url="@/jbudget.jpg" />
                    </ImageView>
                    <Label text="JBudget - Gestione Budget Personale" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                </HBox>

                <!-- STATISTICHE RAPIDE -->
                <HBox spacing="20">
                    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="250">
                        <Label text="Bilancio Totale" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" />
                        <Label fx:id="balance" text="0.00 €" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                        <Button text="Aggiorna" onAction="#updateBalance" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" />
                    </VBox>

                    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="250">
                        <Label text="Ultimo Movimento" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" />
                        <Label text="Nessun movimento" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
                        <Button text="Vedi Tutti" onAction="#showAllTransactions" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 5;" />
                    </VBox>
                </HBox>

                <!-- AZIONI RAPIDE -->
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="200" halignment="LEFT"/>
                        <ColumnConstraints minWidth="200" halignment="LEFT"/>
                        <ColumnConstraints minWidth="200" halignment="LEFT"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="80" valignment="CENTER"/>
                        <RowConstraints minHeight="80" valignment="CENTER"/>
                        <RowConstraints minHeight="80" valignment="CENTER"/>
                    </rowConstraints>

                    <Button text="➕ Nuova Transazione" onAction="#showAddTransaction" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" GridPane.columnIndex="0" GridPane.rowIndex="0" maxWidth="Infinity" maxHeight="30" />
                    <Button text="💰 Budget" onAction="#showBudget" style="-fx-background-color: #1b25e0; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" GridPane.columnIndex="2" GridPane.rowIndex="0" maxWidth="Infinity" maxHeight="30" />
                    <Button text="🔄 Transazioni Programmate" onAction="#showTransazioniProgrammate" style="-fx-background-color: #e01bb2; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity" maxHeight="30" />
                    <Button text="📊 Statistiche" onAction="#showStatistics" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity" maxHeight="30" />
                    <Button text="🗂️ Ammortamento" onAction="#showAmortization" style="-fx-background-color: #65a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" GridPane.columnIndex="2" GridPane.rowIndex="1" maxWidth="Infinity" maxHeight="30" />
                    <Button text="🏷️ Gestione Tag" onAction="#showTagManager" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" GridPane.columnIndex="0" GridPane.rowIndex="1" maxWidth="Infinity" maxHeight="30" />
                    <Button text="📅 Scadenzario" onAction="#showDeadlines" style="-fx-background-color: #b55f68; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" GridPane.columnIndex="0" GridPane.rowIndex="2" maxWidth="Infinity" maxHeight="30" />
                    <Button text="⚙️ Impostazioni" onAction="#showSettings" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;" GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="Infinity" maxHeight="30" />
                </GridPane>
            </VBox>
        </content>
    </Tab>

    <!-- TAB 2: GESTIONE TRANSAZIONI -->
    <Tab text="💸 Transazioni">
        <content>
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label text="Gestione Transazioni" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                <!-- FORM NUOVA TRANSAZIONE -->
                <GridPane hgap="10" vgap="10" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 15;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="70" />
                    </columnConstraints>

                    <Label text="Tipo:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <ChoiceBox fx:id="typeTransaction" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Utente:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <ChoiceBox fx:id="personChoiceBox" GridPane.rowIndex="1" GridPane.columnIndex="1">
                        <tooltip>
                            <Tooltip text="Seleziona una persona esistente o aggiungine una nuova dalla gestione persone"/>
                        </tooltip>
                    </ChoiceBox>

                    <!-- Aggiungi un pulsante per gestire le persone -->
                    <Button text="👥 Gestisci Persone" onAction="#showPersonManager" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                    <Label text="Importo:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <TextField fx:id="moneyTransaction" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Data:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <DatePicker fx:id="dateTransaction" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Label text="Seleziona Tag:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <ListView fx:id="transactionTagsListView" GridPane.rowIndex="4" GridPane.columnIndex="1"
                              prefHeight="100" prefWidth="200" />

                    <!-- Aggiungi un messaggio informativo -->
                    <Label text="                                                                       I tag disponibili qui sono quelli selezionati nella tab 'Gestione Tag'"
                           GridPane.columnIndex="1" GridPane.rowIndex="5"
                           style="-fx-text-fill: #666; -fx-font-size: 11px; -fx-font-style: italic;" />

                    <Button text="Aggiungi Transazione" onAction="#addTransaction" GridPane.columnIndex="1" GridPane.rowIndex="5"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;" />
                </GridPane>

                <!-- TABella TRANSAZIONI -->
                <TableView fx:id="transactionTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="typeColumnTransactionTable" text="Tipo" />
                        <TableColumn fx:id="userColumnTransactionTable" text="Utente" />
                        <TableColumn fx:id="moneyColumnTransactionTable" text="Importo" />
                        <TableColumn fx:id="dateColumnTransactionTable" text="Data" />
                        <TableColumn fx:id="tagColumnTransactionTable" text="Tag" />
                    </columns>
                </TableView>
            </VBox>
        </content>
    </Tab>

    <!-- TAB 3: GESTIONE TAG AVANZATA -->
    <Tab text="🏷️ Gestione Tag">
        <content>
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label text="Gestione Tag" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                <Label text="Tag selezionati qui appariranno nelle Taglist dei vari menu"
                       style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-padding: 10px;" />

                <HBox spacing="20">
                    <!-- TAG DISPONIBILI -->
                    <VBox spacing="10" prefWidth="250">
                        <Label text="Tag Disponibili" style="-fx-font-weight: bold;" />
                        <ListView fx:id="availableTagsListView" prefHeight="200" />
                    </VBox>

                    <!-- PULSANTI AZIONE -->
                    <VBox spacing="10" alignment="CENTER">
                        <Button fx:id="addTagButton" text="➡️ Aggiungi" onAction="#addSelectedTag"
                                style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                        <Button fx:id="removeTagButton" text="⬅️ Rimuovi" onAction="#removeSelectedTag"
                                style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
                    </VBox>

                    <!-- TAG SELEZIONATI -->
                    <VBox spacing="10" prefWidth="250">
                        <Label text="Tag Selezionati" style="-fx-font-weight: bold;" />
                        <ListView fx:id="selectedTagsListView" prefHeight="200" />
                    </VBox>
                </HBox>

                <!-- CREAZIONE NUOVI TAG -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="newTagTextField" promptText="Nome nuovo tag" prefWidth="200" />
                    <Button fx:id="createTagButton" text="➕ Crea Tag" onAction="#createNewTag"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                </HBox>

                <!-- GERARCHIA TAG -->
                <VBox spacing="10">
                    <Label text="Gerarchia Tag" style="-fx-font-weight: bold;" />
                    <TreeView fx:id="tagHierarchyTreeView" prefHeight="150" />
                </VBox>

                <!-- Aggiungi questo HBox dopo la gerarchia tag -->
                <HBox spacing="10" alignment="CENTER">
                    <Button text="🔄 Ricarica Tutti" onAction="#refreshAllTags"
                            style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                    <Button text="📤 Esporta" onAction="#exportTags"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                    <Button text="📥 Importa" onAction="#importTags"
                            style="-fx-background-color: #e67e22; -fx-text-fill: white;" />
                    <Button text="🗑️ Elimina" onAction="#deleteSelectedTag"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
                </HBox>

            </VBox>
        </content>
    </Tab>


    <!-- TAB 4: STATISTICHE E REPORT -->
    <Tab text="📊 Statistiche">
        <content>
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label text="Statistiche e Analisi" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                <!-- ANALISI PER PERIODO -->
                <GridPane hgap="10" vgap="10" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 15;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="25" />
                    </columnConstraints>

                    <Label text="Bilancio per Periodo:" GridPane.columnSpan="4" style="-fx-font-weight: bold;" />

                    <Label text="Da:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <DatePicker fx:id="dateStartForRange" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="A:" GridPane.rowIndex="1" GridPane.columnIndex="2" />
                    <DatePicker fx:id="dateEndForRange" GridPane.rowIndex="1" GridPane.columnIndex="3" />

                    <Label text="Tipo:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <ChoiceBox fx:id="choiceForRange" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Risultato:" GridPane.rowIndex="2" GridPane.columnIndex="2" />
                    <Label fx:id="balanceForRange" text="0.00 €" GridPane.rowIndex="2" GridPane.columnIndex="3" />

                    <Button text="Calcola" onAction="#updateBalanceForRange" GridPane.columnIndex="3" GridPane.rowIndex="3"
                            style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                </GridPane>

                <!-- TREND -->
                <GridPane hgap="10" vgap="10" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 15;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="25" />
                        <ColumnConstraints percentWidth="25" />
                    </columnConstraints>

                    <Label text="Analisi Trend:" GridPane.columnSpan="4" style="-fx-font-weight: bold;" />

                    <Label text="Da:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <DatePicker fx:id="dateStartForTrend" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="A:" GridPane.rowIndex="1" GridPane.columnIndex="2" />
                    <DatePicker fx:id="dateEndForTrend" GridPane.rowIndex="1" GridPane.columnIndex="3" />

                    <Label text="Risultato:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <Label fx:id="balanceTrend" text="N/A" wrapText="true" maxWidth="Infinity" maxHeight="Infinity" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" style="-fx-font-size: 14px;" />

                    <Button text="Analizza Trend" onAction="#updateBalanceTrend" GridPane.columnIndex="3" GridPane.rowIndex="3"
                            style="-fx-background-color: #9b59b6; -fx-text-fill: white;" />
                </GridPane>

                <!-- TABELLA TAG -->
                <VBox spacing="10">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Analisi per Tag:" style="-fx-font-weight: bold;" />
                        <ChoiceBox fx:id="choiceTypeForEachTag" />
                        <Button text="Mostra" onAction="#showTypeTagTable"
                                style="-fx-background-color: #e67e22; -fx-text-fill: white;" />
                    </HBox>
                    <TableView fx:id="tagTable" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="tagColumnTagTable" text="Tag" />
                            <TableColumn fx:id="moneyColumnTagTable" text="Importo" />
                        </columns>
                    </TableView>
                </VBox>
            </VBox>
        </content>
    </Tab>

    <!-- TAB 5: GESTIONE BUDGET -->
    <Tab text="💰 Budget">
        <content>
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label text="Gestione Budget" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                <!-- FORM IMPOSTA BUDGET -->
                <GridPane hgap="10" vgap="10" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 15;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="70" />
                    </columnConstraints>

                    <Label text="Seleziona Tag:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <ListView fx:id="budgetTagsListView" prefHeight="100" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Importo Budget:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="budgetAmountField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Data Inizio:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <DatePicker fx:id="budgetStartDate" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Data Fine:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <DatePicker fx:id="budgetEndDate" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Button text="Imposta Budget" onAction="#setBudget" GridPane.columnIndex="1" GridPane.rowIndex="4"
                            style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                </GridPane>

                <!-- TABELLA BUDGET -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="🔄 Aggiorna Budget" onAction="#updateBudgets"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                    <Button text="🗑️ Rimuovi Budget" onAction="#removeBudget"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
                </HBox>

                <TableView fx:id="budgetTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="budgetCategoryColumn" text="Categoria" />
                        <TableColumn fx:id="budgetAllocatedColumn" text="Budget Allocato" />
                        <TableColumn fx:id="budgetSpentColumn" text="Speso" />
                        <TableColumn fx:id="budgetRemainingColumn" text="Rimanente" />
                        <TableColumn fx:id="budgetPercentageColumn" text="Utilizzo %" />
                    </columns>
                </TableView>
            </VBox>
        </content>
    </Tab>

    <!-- TAB 6: TRANSAZIONI PROGRAMMATE -->
    <Tab text="🔄 Programmate">
        <content>
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label text="Transazioni Programmate" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                <!-- FORM AGGIUNGI TRANSAZIONE PROGRAMMATA -->
                <GridPane hgap="10" vgap="10" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 15;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="70" />
                    </columnConstraints>

                    <Label text="Descrizione:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="scheduledDescField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Importo:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="scheduledAmountField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Tipo:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <ChoiceBox fx:id="scheduledType" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Tag:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <ListView fx:id="scheduledTagsListView" prefHeight="250" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Label text="Ricorrenza:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                    <ChoiceBox fx:id="scheduledRecurrence" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                    <Label text="Data Inizio:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                    <DatePicker fx:id="scheduledStartDate" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                    <Label text="Data Fine (opzionale):" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                    <DatePicker fx:id="scheduledEndDate" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                    <Button text="Aggiungi Programmata" onAction="#addScheduledTransaction" GridPane.columnIndex="1" GridPane.rowIndex="7"
                            style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                </GridPane>

                <!-- TABELLA TRANSAZIONI PROGRAMMATE -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="✅ Verifica Ora" onAction="#checkScheduledTransactions"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                    <Button text="🗑️ Rimuovi" onAction="#removeScheduledTransaction"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
                </HBox>

                <TableView fx:id="scheduledTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="scheduledDescColumn" text="Descrizione" />
                        <TableColumn fx:id="scheduledAmountColumn" text="Importo" />
                        <TableColumn fx:id="scheduledTypeColumn" text="Tipo" />
                        <TableColumn fx:id="scheduledRecurrenceColumn" text="Ricorrenza" />
                        <TableColumn fx:id="scheduledNextDateColumn" text="Prossima Esecuzione" />
                    </columns>
                </TableView>
            </VBox>
        </content>
    </Tab>

    <!-- Tab per Piano di Ammortamento -->
    <Tab text="🗂️ Ammortamento">
        <content>
            <VBox spacing="15">
                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                <Label text="Piano di Ammortamento Francese" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <!-- CREAZIONE NUOVO PIANO -->
                <Label text="Crea Nuovo Piano di Ammortamento" style="-fx-font-weight: bold;"/>

                <Label text="Seleziona i tag dalle categorie selezionate nella tab 'Gestione Tag'"
                       style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-padding: 5px;"/>

                <!-- Form di input -->
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>

                    <Label text="Descrizione:" GridPane.rowIndex="0"/>
                    <TextField fx:id="amortDescription" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Importo Prestito:" GridPane.rowIndex="1"/>
                    <TextField fx:id="amortPrincipal" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Tasso Interesse %:" GridPane.rowIndex="2"/>
                    <TextField fx:id="amortInterestRate" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Numero Rate:" GridPane.rowIndex="3"/>
                    <TextField fx:id="amortInstallments" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Data Inizio:" GridPane.rowIndex="4"/>
                    <DatePicker fx:id="amortStartDate" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Tag:" GridPane.rowIndex="5"/>
                    <ListView fx:id="amortTags" GridPane.rowIndex="5" GridPane.columnIndex="1" prefHeight="100"/>

                    <Button text="Genera Piano" onAction="#createAmortizationPlan"
                            GridPane.columnIndex="1" GridPane.rowIndex="6"
                            style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                </GridPane>

                <HBox spacing="20" alignment="TOP_LEFT">
                    <!-- TABELLA PIANI ATTIVI -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Piani di Ammortamento Attivi" style="-fx-font-weight: bold;"/>
                            <Button text="🔄 Aggiorna" onAction="#refreshAmortizationTable"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                            <Button text="🗑️ Elimina" onAction="#deleteSelectedAmortizationPlan"
                                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                        </HBox>

                        <TableView fx:id="amortizationPlansTable" prefHeight="200" prefWidth="300">
                            <columns>
                                <TableColumn fx:id="amortPlanNameColumn" text="Descrizione" minWidth="150"/>
                                <TableColumn fx:id="amortPlanAmountColumn" text="Importo" minWidth="100"/>
                                <TableColumn fx:id="amortPlanRateColumn" text="Tasso %" minWidth="80"/>
                                <TableColumn fx:id="amortPlanInstallmentsColumn" text="Rate" minWidth="60"/>
                                <TableColumn fx:id="amortPlanStartDateColumn" text="Data Inizio" minWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>

                    <!-- TABELLA DETTAGLIO RATE -->
                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Dettaglio Rate del Piano Selezionato" style="-fx-font-weight: bold;"/>
                            <Button text="" style="-fx-background-color: #ffffff; -fx-text-fill: white;"/>
                        </HBox>
                        <TableView fx:id="amortTable" prefHeight="200" prefWidth="400">
                            <columns>
                                <TableColumn text="N°" minWidth="40"/>
                                <TableColumn text="Scadenza" minWidth="100"/>
                                <TableColumn text="Rata Totale" minWidth="100"/>
                                <TableColumn text="Quota Capitale" minWidth="100"/>
                                <TableColumn text="Quota Interessi" minWidth="100"/>
                                <TableColumn text="Debito Residuo" minWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>
                </HBox>
            </VBox>
        </content>
    </Tab>

    <!-- Tab per Scadenzario -->
    <Tab text="📅 Scadenzario">
        <content>
            <VBox spacing="15">
                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                <Label text="Scadenzario - Tutte le Scadenze Future" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <!-- Filtri e Pulsanti -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Filtra per tipo:"/>
                    <ChoiceBox fx:id="deadlineFilterType" prefWidth="150"/>
                    <Button text="🔄 Aggiorna" onAction="#refreshDeadlines"
                            style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                    <Button text="✅ Processa" onAction="#processSelectedDeadline"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                </HBox>

                <!-- Tabella Scadenze -->
                <TableView fx:id="deadlinesTable" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="deadlineDateColumn" text="Data" minWidth="100"/>
                        <TableColumn fx:id="deadlineStatusColumn" text="Stato" minWidth="80"/>
                        <TableColumn fx:id="deadlineDescriptionColumn" text="Descrizione" minWidth="200"/>
                        <TableColumn fx:id="deadlineAmountColumn" text="Importo" minWidth="100"/>
                        <TableColumn fx:id="deadlineTypeColumn" text="Tipo" minWidth="120"/>
                    </columns>
                </TableView>

                <!-- Statistiche -->
                <HBox spacing="20" alignment="CENTER">
                    <Label fx:id="totalDeadlinesLabel" text="Totale: 0" style="-fx-font-weight: bold;"/>
                    <Label fx:id="overdueDeadlinesLabel" text="In ritardo: 0" style="-fx-text-fill: #c62828; -fx-font-weight: bold;"/>
                    <Label fx:id="dueTodayDeadlinesLabel" text="Oggi: 0" style="-fx-text-fill: #ff8f00; -fx-font-weight: bold;"/>
                    <Label fx:id="futureDeadlinesLabel" text="Futuro: 0" style="-fx-text-fill: #2e7d32; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>
        </content>
    </Tab>

    <!-- Tab Persone -->
    <Tab text="👥 Persone">
        <content>
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="Gestione Persone" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                <!-- Form per aggiungere persone -->
                <GridPane hgap="10" vgap="10" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 15;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="70" />
                    </columnConstraints>

                    <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="personNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="personEmailField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Telefono:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <TextField fx:id="personPhoneField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Button text="Aggiungi Persona" onAction="#addPerson" GridPane.columnIndex="1" GridPane.rowIndex="3"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;" />
                </GridPane>

                <!-- Tabella delle persone -->
                <TableView fx:id="personTable" prefHeight="300">
                    <columns>
                        <TableColumn text="Nome" />
                        <TableColumn text="Email" />
                        <TableColumn text="Telefono" />
                        <TableColumn text="Azioni" />
                    </columns>
                </TableView>
            </VBox>
        </content>
    </Tab>

</TabPane>