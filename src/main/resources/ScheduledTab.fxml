<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicam.cs.mpgc.jbudget126533.view.ScheduledTab" stylesheets="@styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Transazioni Programmate" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- FORM AGGIUNGI TRANSAZIONE PROGRAMMATA -->
    <GridPane hgap="10" vgap="10" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 15;">
        <columnConstraints>
            <ColumnConstraints percentWidth="30" />
            <ColumnConstraints percentWidth="70" />
        </columnConstraints>

        <Label text="Descrizione:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="scheduledDescField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Importo:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="scheduledAmountField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Tipo:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <ChoiceBox fx:id="scheduledType" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Tag:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <ListView fx:id="scheduledTagsListView" prefHeight="250" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Ricorrenza:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <ChoiceBox fx:id="scheduledRecurrence" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Data Inizio:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <DatePicker fx:id="scheduledStartDate" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Data Fine (opzionale):" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <DatePicker fx:id="scheduledEndDate" GridPane.rowIndex="6" GridPane.columnIndex="1" />

        <Button text="Aggiungi Programmata" onAction="#addScheduledTransaction" GridPane.columnIndex="1" GridPane.rowIndex="7"
                style="-fx-background-color: #3498db; -fx-text-fill: white;" />
    </GridPane>

    <!-- TABELLA TRANSAZIONI PROGRAMMATE -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="âœ… Verifica Ora" onAction="#checkScheduledTransactions"
                style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
        <Button text="ðŸ—‘ï¸ Rimuovi" onAction="#removeScheduledTransaction"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
    </HBox>

    <TableView fx:id="scheduledTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="scheduledDescColumn" text="Descrizione" />
            <TableColumn fx:id="scheduledAmountColumn" text="Importo" />
            <TableColumn fx:id="scheduledTypeColumn" text="Tipo" />
            <TableColumn fx:id="scheduledRecurrenceColumn" text="Ricorrenza" />
            <TableColumn fx:id="scheduledNextDateColumn" text="Prossima Esecuzione" />
        </columns>
    </TableView>
</VBox>